    <?php echo '<script'; ?>
 type="text/javascript">
        $(function(){
            var banner = $("#banner"),
                nav = $("#nav"),
                more = $(".more");
            $(window).on("scroll",function(){
                if($(window).scrollTop() >= (banner.height()-nav.height())){
                    $("#nav").removeClass("alt");
                }else{
                    $("#nav").addClass("alt");
                }
            });
            //浏览器刷新触发scroll事件
            $(window).trigger("scroll");

            more.on("click",function(){
                $("html, body").animate({
                    scrollTop: banner.height()-nav.height() + "px"
                }, 1200);
            });

            // $("#signin").modal("show");
            // $("#signin").modal("hide");
        });
    <?php echo '</script'; ?>
